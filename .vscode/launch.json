    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Interactive Messages Tests",
            "program": "${workspaceFolder}/packages/interactive-messages/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/interactive-messages/src/*.spec.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/packages/interactive-messages"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Events API Tests",
            "program": "${workspaceFolder}/packages/events-api/node_modules/mocha/bin/_mocha",
